@page "/devices"
@inject NavigationManager NavManager
@rendermode InteractiveServer

<PageTitle>Smart Devices</PageTitle>

<div class="devices-container">
    <h1>Connect Your Smart Devices</h1>
    <div class="device-info">
        <p>Manage your smart devices like lights, speakers, TVs, and more from this page. Connect your devices to control them through the app.</p>
    </div>

    <div class="devices-list">
        <div class="device-item">
            <div class="device-icon">
                <i class="fas fa-lightbulb"></i>
            </div>
            <div class="device-name">Smart Light</div>
        </div>
        <div class="device-item">
            <div class="device-icon">
                <i class="fas fa-volume-up"></i>
            </div>
            <div class="device-name">Smart Speaker</div>
        </div>
        <div class="device-item">
            <div class="device-icon">
                <i class="fas fa-tv"></i>
            </div>
            <div class="device-name">Smart TV</div>
        </div>
        <div class="device-item">
            <div class="device-icon">
                <i class="fas fa-fan"></i>
            </div>
            <div class="device-name">Smart Fan</div>
        </div>
    </div>

    <div class="button-group">
        <button class="connect-btn">Connect Devices</button>
    </div>
</div>

<button class="return-button" @onclick="NavigateHome">Return</button>

<style>
    .devices-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        padding: 20px;
        height: 100vh;
    }

    h1 {
        font-size: 3rem;
        color: #1e3a5f;
        margin-bottom: 20px;
    }

    .device-info {
        font-size: 1.2rem;
        color: #333;
        text-align: center;
        margin-bottom: 30px;
    }

    .devices-list {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
        width: 100%;
        max-width: 600px;
    }

    .device-item {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 15px;
        padding: 15px;
        background-color: #e0f7fa;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        width: 100%;
        max-width: 500px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .device-item:hover {
        background-color: #b2ebf2;
    }

    .device-icon {
        font-size: 2.5rem;
        color: #00796b;
    }

    .device-name {
        font-size: 1.5rem;
        color: #333;
    }

    .button-group {
        margin-top: 40px;
    }

    .connect-btn {
        padding: 15px 30px;
        font-size: 1.2rem;
        background-color: #a8d5a2;
        color: white;
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .connect-btn:hover {
        background-color: #81c784;
    }

    .connect-btn:focus {
        outline: none;
    }

    .return-button {
        position: fixed;
        bottom: 20px;
        left: 20px;
        padding: 10px 20px;
        font-size: 1rem;
        background-color: #1e3a5f;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

    .return-button:hover {
        background-color: #357ac9;
    }
</style>

@code {
    private void NavigateHome()
    {
        NavManager.NavigateTo("/");
    }

    private void ConnectDevices()
    {
        // Add functionality later if needed
    }
}