@page "/"
@inject NavigationManager NavManager
@rendermode InteractiveServer

<PageTitle>Home</PageTitle>

<div class="home-container">
    <div class="energy-usage">
        <div class="energy-usage-box">
            <span class="energy-usage-number">@EnergyUsage kWh</span>
        </div>
    </div>

    <div class="button-group">
        <button type="button" class="energy-usage-btn" @onclick="NavigateToEnergyUsage">Energy Usage</button>
        <button type="button" class="manage-goal-btn" @onclick="NavigateToManageGoal">Manage Energy Goal</button>
        <button type="button" class="smart-devices-btn" @onclick="NavigateToSmartDevices">Smart Devices</button>
    </div>
</div>

<style>
    .home-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        padding: 20px;
        height: 100vh;
    }

    .energy-usage {
        margin-top: 40px;
    }

    .energy-usage-box {
        display: flex;
        justify-content: center;
        align-items: center;
        padding: 30px;
        border: 3px solid #1e3a5f;
        border-radius: 10px;
        background-color: #f0f9ff;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 40px;
    }

    .energy-usage-number {
        font-size: 7rem;
        color: #1e3a5f;
        font-weight: bold;
    }

    .button-group {
        display: flex;
        gap: 2rem;
        margin-top: 60px;
        width: 100%;
        justify-content: space-evenly;
    }

    .button-group button {
        padding: 50px;
        font-size: 1.5rem;
        border: none;
        border-radius: 10px;
        width: 30%;
        cursor: pointer;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: background-color 0.3s;
        height: 300px;
    }

    .energy-usage-btn {
        background-color: #f3e6f6;
    }

    .manage-goal-btn {
        background-color: #a8d5a2;
    }

    .smart-devices-btn {
        background-color: #ffd59e;
    }

    .button-group button:hover {
        opacity: 0.9;
    }

    .button-group button:focus {
        outline: none;
    }

</style>

@code {
    private double EnergyUsage = 150.0;

    private void NavigateToEnergyUsage()
    {
        Console.WriteLine("Navigating to Energy Usage page");
        NavManager.NavigateTo("/usage");
    }

    private void NavigateToManageGoal()
    {
        // Your navigation logic to Energy Goal page
    }

    private void NavigateToSmartDevices()
    {
        // Your navigation logic to Smart Devices page
    }
}